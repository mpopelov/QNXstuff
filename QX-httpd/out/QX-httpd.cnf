<server>

# configuring pool of working threads
WorkpoolMin		3
WorkpoolMax		30
WorkpoolSpare	10

# restricting maximum number of clients
MaxClients		100

# size of send/recieve buffers per connection
CliBuffers		8192



</server>




#
# Here follows description of virtual hosts this server
# maintains.
