<vhost>
	# Address of the form x.y.z.h[:port]
	# "port" parameter is optional and by default equals to 80
	Address		10.0.1.5
	
	# Server FQDN
	VhostFQDN	this.server.mydomain.com
	
	# Server root directory
	VhostRoot	/www/pages/
	
	# directory index file
	VhostIndex	index.html
	
	# ????
</vhost>



